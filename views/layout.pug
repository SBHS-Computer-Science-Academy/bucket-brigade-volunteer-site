doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		title= title
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
	body
		nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
			.container-fluid
				ul(class="navbar-nav")
					li(class="nav-item")
						if active_page == "home"
							a(class="nav-link active", href="/") Home
						else
							a(class="nav-link", href="/") Home
					li(class="nav-item")
						if active_page == "hub"
							a(class="nav-link active", href="/volunteer-hub") Volunteer Hub
						else
							a(class="nav-link", href="/volunteer-hub") Volunteer Hub
					li(class="nav-item")
						if active_page == "experience"
							a(class="nav-link active", href="/volunteer-experiences") Volunteer Experiences
						else
							a(class="nav-link", href="/volunteer-experiences") Volunteer Experiences
		
		block content
