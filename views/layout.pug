doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title= title
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
		script(src='/scripts/jquery.js')
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
	body
		nav(class="navbar navbar-expand-md navbar-dark justify-content-center")
			div(class="container-fluid")
				button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar")
					span(class="navbar-toggler-icon")
				div(class="collapse navbar-collapse justify-content-center" id="collapsibleNavbar")
					a(class="navbar-brand" href="/")
						img(src="/images/bb-logo.png" alt="Santa Barbara Bucket Brigade Logo" width="200px" class="mx-auto d-block")
					ul(class="navbar-nav text-center")
						li(class="nav-item")
							if active_page == "home"
								a(class="nav-link active", href="/") #[strong Home]
							else
								a(class="nav-link", href="/") #[strong Home]
						li(class="nav-item")
							a(class="nav-link", data-bs-toggle="modal", data-bs-target="#myModal") #[strong Volunteer Hub]
						li(class="nav-item")
							if active_page == "experience"
								a(class="nav-link active", href="/volunteer-experiences") #[strong Volunteer Experiences]
							else
								a(class="nav-link", href="/volunteer-experiences") #[strong Volunteer Experiences]
		
		
		div(class="modal" id="myModal")
			div(class="modal-dialog")
				div(class="modal-content")
					div(class="modal-header")
						h2(class="modal-title") Warning!
						button(type="button" class="btn-close" data-bs-dismiss="modal")
		
					div(class="modal-body")
						p(style="font-size:25px") You are being redirected to a new site.
						p You're about to be taken to the Bucket Brigade Volunteer Hub website. If you wish to stay on this page, click on "Stay on current page".
					div(class="modal-footer")
						button(type="button" class="btn btn-danger" data-bs-dismiss="modal") Stay on current page
						a(type="button" class="btn btn-danger" href="https://bucketbrigade.volunteerhub.com/vv2/" target="_blank") Open Volunteer Hub
		
		block content
		